using namespace std;


int romToInt(string rom)
{
	int vec[50], tam = 0;
	int sum = 0;
	char a;
	for (int i = 0; i < rom.length(); i++)
	{
		a = rom[i];
		switch (a)
		{
		case 'I' :
			vec[i] = 1;
			break;
		case 'V':
			vec[i] = 5;
			break;
		case 'X':
			vec[i] = 10;
			break;
		case 'C':
			vec[i] = 100;
			break;
		case 'D' :
			vec[i] = 500;
			break;
		case 'M':
			vec[i] = 1000;
			break;
		}
		tam++;
	}
	for (int i = 0; i < tam; i++)
	{
		if (vec[i] < vec[i + 1])
		{
			sum = sum + vec[i + 1] - vec[i];
			i++;
		}
		else {
			sum = sum + vec[i];
		}
	}
	return sum;
}
